{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run: Dev (Flask)",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "python",
        "-m",
        "vantracker.main"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run: Gunicorn",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "gunicorn",
        "-w",
        "2",
        "-b",
        "127.0.0.1:9000",
        "vantracker.main:app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint: Ruff",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "ruff",
        "check",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Format: Ruff",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "ruff",
        "format",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Test: Pytest",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pytest",
        "-q"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}